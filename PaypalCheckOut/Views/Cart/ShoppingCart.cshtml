@using System.Globalization;
@model IEnumerable<PaypalCheckOut.Models.ProductModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Shopping Cart</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)

                </td>
                <td>
                    @item.Price.ToString("c", CultureInfo.CreateSpecificCulture("es-ES"))
                </td>

            </tr>
        }
        <tr >
            <td colspan="4" style="height:50px">
                
            </td>
        </tr>


        <tr>
            <td colspan="2">
            </td>
            <td>
                Subtotal:
            </td>

            <td>
                @ViewBag.SubTotal
            </td>

        </tr>
        <tr>
            <td colspan="2">
            </td>
            <td>
                Taxes (3%):
            </td>

            <td>
                @ViewBag.Tax
            </td>

        </tr>
        <tr>
            <td colspan="2">
            </td>
            <td>
                Shipping:
            </td>

            <td>
                @ViewBag.Shipping
            </td>

        </tr>
        <tr>
            <td colspan="2">
            </td>
            <td>
                Handling:
            </td>

            <td>
                @ViewBag.Handling
            </td>

        </tr>
        <tr>
            <td colspan="2">
            </td>
            <td>
                Discount (1%):
            </td>

            <td>
                - @ViewBag.Discount
            </td>

        </tr>
        <tr>
            <td colspan="2">
            </td>
            <td>
                Total:
            </td>

            <td>
                @ViewBag.Total
            </td>

        </tr>

    </tbody>
</table>



<form asp-controller="Cart" asp-action="PayWithPaypal" method="post">

    <input type="submit" value="Pay with PayPal" />
</form>

